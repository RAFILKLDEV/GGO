<rectangle align="left"
           width="300"
           color="#1C1C1C"
           name="talentosBar"
           margins="{right=5}"
           padding="{left=5,top=5,right=5,bottom=5}">
    <rectangle align="top"
               height="60"
               color="#2E2E2E"
               padding="{left=7,top=3,right=3,bottom=3}"
               strokeSize="1"
               strokeColor="#00CFFF">
        <event name="onClick">            
            require("utils.lua");
            require("gui.lua");
            local minhaMesa = Firecast.getRoomOf(sheet);
            local chat = minhaMesa.chat;
            local xml = NDB.load("talentosLista.xml");
            local arrayTalentos = NDB.getChildNodes(xml);
            
            talentos = {} -- new array
            nomesTalentos = {} -- new array
            
            for i = 1, #arrayTalentos, 1 do
            talentos[i] = xml["f" .. i]
            nomesTalentos[i] = xml["f" .. i].nome
            table.sort(nomesTalentos)
            end
            
            for k = 1, #talentos, 1 do
            
            if sheet.seletorModal == talentos[k].nome then
            sheet.modalNode = talentos
            
            local rectangle = GUI.newRectangle()
            rectangle.align = "top"
            rectangle.height = 60
            rectangle.color = "#2E2E2E"
            rectangle.padding = {left=7, top=3, right=3, bottom=3}
            rectangle.strokeSize = 1
            rectangle.strokeColor = "#00CFFF"
            rectangle.parent = self.talentosBar -- substitua pelo container pai
            
            local iconRect = GUI.newRectangle()
            iconRect.align = "left"
            iconRect.width = 50
            iconRect.color = "#3A3A3A"
            iconRect.margins = {left=5, top=5, right=5, bottom=5}
            iconRect.parent = rectangle
            
            local layout = GUI.newLayout()
            layout.align = "left"
            layout.width = 300
            layout.margins = {left=5}
            layout.parent = rectangle
            
            local label1 = GUI.newLabel()
            label1.align = "top"
            label1.height = 20
            label1.text = "Classe"
            label1.parent = layout
            
            local label2 = GUI.newLabel()
            label2.align = "top"
            label2.height = 35
            label2.fontSize = 26
            label2.text = "Especialista"
            label2.parent = layout
            
            end
            
            end
            sheet.seletorModal = "Level1"
            self.modal:show()
        </event>
        <rectangle align="left"
                   width="50"
                   color="#3A3A3A"
                   margins="{left=5,top=5,right=5,bottom=5}" />
        <layout align="left"
                margins="{left=5}"
                width="300">
            <label align="top"
                   height="20"
                   text="Classe" />
            <label align="top"
                   height="35"
                   fontSize="26"
                   text="Especialista" />
        </layout>
    </rectangle>
