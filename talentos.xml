<rectangle align="left"
    width="300"
    color="#1C1C1C"
    name="talentosBar"
    margins="{right=5}"
    padding="{left=5,top=5,right=5,bottom=5}">
    <layout align="top"
        name="level1layout"
        height="80"
        margins="{bottom=10}">
        <label align="top" height="20" text="Atributos " />
        <rectangle align="top"
            height="60"
            color="#2E2E2E"
            padding="{left=7,top=3,right=3,bottom=3}"
            strokeSize="1"
            strokeColor="#00CFFF">
            <event name="onClick">
                self.modalLevel1:show()
            </event>
            <label align="client"
                fontSize="15"
                field="level1Titulo"
                horzTextAlign="center" />
        </rectangle>
    </layout>
    <talento lv="1" n="1" />
    <talento lv="2" n="2" />
    <talento lv="3" n="3" />
</rectangle>